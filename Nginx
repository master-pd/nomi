server {
    listen 80;
    server_name bot.yourdomain.com;
    
    location /webhook {
        proxy_pass http://127.0.0.1:8443;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
    
    location /status {
        # Health check endpoint
        return 200 "OK";
    }
}